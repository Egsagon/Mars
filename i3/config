# Show or hide wk-helper
exec_always --no-startup-id python3 ./check.py

# tilda always on top
for_window [class="Tilda"] sticky enable
for_window [class="Tilda"] floating enable

# Start xborders
exec_always --no-startup-id xbd

# Open flameshot
bindsym $mod+shift+s exec flameshot gui

